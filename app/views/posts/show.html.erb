

<div class="user-box large-12 medium-12 small-12 columns">
	<%= image_tag @post.user.avatar.url(:thumb), class: 'profile' %>
	<%= link_to @post.user.full_name, @post.user %>

	<div class="postContent large-4 medium-4 small-12 columns">
		<p><%= @post.content %></p>
	</div>
	<div class="large-8 medium-8 small-12 columns">
		<%= image_tag @post.avatar.url if @post.avatar.exists? %>
	</div>
</div>

<div class="large-12 medium-12 small-12 columns">
	<div class="large-3 medium-3 small-12 columns">
		<%= render 'shared/like_form', likeable: @post %>
		<div class="likes"><%= pluralize(@post.likers(User).count, 'like')%>
		</div>
		<div class="<%= @post.class %>-<%= @post.id %>">
		<%= link_to pluralize(@comments.count, 'comment'), @post, class: 'comments' %>
		</div>
	</div>

	<div class="large-12 medium-12 small-12 columns">
		<%= render 'shared/form' %>
		<%= render @comments  %>
	</div>
</div>
